# ===== 数据库配置 =====
DATABASE_URL=postgresql://wechat_agent:your_secure_password_here@db:5432/wechat_agent

# ===== Redis配置 =====
REDIS_URL=redis://redis:6379/0

# ===== JWT配置 =====
# 生成方式: openssl rand -hex 32
# 或: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-please-change-it

# ===== 加密密钥 =====
# 生成方式: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key-here

# ===== AI服务配置 =====
# SiliconFlow API Key (用于文章生成)
# 获取地址: https://siliconflow.cn/
SILICONFLOW_API_KEY=sk-your-api-key-here

# ===== 微信公众号配置 (可选) =====
# 在微信公众平台后台获取
# WECHAT_APPID=wxYourAppId
# WECHAT_APPSECRET=YourAppSecret

# ===== 应用配置 =====
# 后端API服务端口
BACKEND_PORT=8000

# 前端Web服务端口  
FRONTEND_PORT=27999

# 运行环境 (development/production)
ENVIRONMENT=production

# 服务器IP (生产环境填写实际IP)
SERVER_IP=localhost

# ===== 日志配置 =====
LOG_LEVEL=INFO
DEBUG=False

# ===== CORS配置 (生产环境) =====
# 多个域名用逗号分隔
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
